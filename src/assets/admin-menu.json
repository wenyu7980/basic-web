        "permissions": [
          {
            "method": "GET",
            "path": "/users"
          }
        ]
      },
      {
        "title": "部门管理",
        "path": "/admin/departments",
        "code": "departmentTablePage",
        "configurable": true,
        "children": [
          {
            "title": "部门详情",
            "code": "departmentDetailPage",
            "configurable": true,
            "disabled": true,
            "permissions": [
              {
                "method": "GET",
                "path": "/departments/*"
              }
            ]
          }
        ],
        "permissions": [
          {
            "method": "GET",
            "path": "/departments"
          }
        ],
        "operators": [
          "departmentAdd"
        ]
      },
      {
        "title": "角色管理",
        "path": "/admin/roles",
        "code": "roleTablePage",
        "configurable": true,
        "children": [
          {
            "title": "创建角色",
            "code": "roleAddPage",
            "configurable": true,
            "disabled": true,
            "permissions": [
              {
                "method": "POST",
                "path": "/roles"
              }
            ]
          },
          {
            "title": "修改角色",
            "code": "roleEditPage",
            "configurable": true,
            "disabled": true,
            "permissions": [
              {
                "method": "GET",
                "path": "/roles/*"
              },
              {
                "method": "PUT",
                "path": "/roles/*"
              }
            ]
          }
        ],
        "operators": [
          "roleAdd"
        ],
        "permissions": [
          {
            "method": "GET",
            "path": "/roles"
          }
        ]
      }
    ]
  }
]
