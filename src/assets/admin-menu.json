        "path": "/admin/users",
        "code": "userTablePage",
        "configurable": true,
        "children": [
          {
            "title": "用户详情",
            "code": "userDetailPage",
            "configurable": true,
            "disabled": true,
            "permissions": [
              {
                "method": "GET",
                "path": "/users/*"
              },
              {
                "method": "GET",
                "path": "/departments/*"
              }
            ],
            "operators": [
              "userDelete",
              "userRoleSet"
            ]
          }
        ],
        "operators": [
          "userAdd"
